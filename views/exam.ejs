<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Course</title>
  <link rel="stylesheet" href="/style.css"/>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
  <div class="D_container">
    <br><br><br>
    <div class="D_nav text-center">
      Welcome to Exam Application System
    </div>

    <div class="D_flex d-flex">
      <!-- Sidebar -->
      <div class="side1 p-3" style="width: 250px;">
        <center><h2>Admin</h2></center>
        <ul class="list-unstyled">
          <li><a href="/dashboard">Admin</a></li>
          <li><a href="/course">Subject</a></li>
          <li><a href="/exam">Exam</a></li>
          <li><a href="/question">Question</a></li>
          <li><a href="/schedule">Schedule</a></li>
          <li><a href="/dashBoard"> Dashboard </a></li> 
        </ul>
      </div>

      <!-- Main Content -->
      <div class="side2 flex-grow-1 p-3">
          <br><br>
        <div class="toshowCourse fixed-height">
          <!-- Course Form -->
          
          <div class="course-form-container  ">
           
            <h2 class="exam-heading">üìù Exam Form</h2>



         <form action="/SaveExamData" method="POST" class="exam-form">
           <div>
                <label for="examName">Exam Name</label> 
                <input type="text" id="examName" name="examName" placeholder="Enter exam name" required>
           </div>
            <div>
                  <label for="totalMarks">Total Marks</label>
                <input type="number" id="totalMarks" name="totalMarks"  min="1"  placeholder="Enter total marks" required>

            </div>
             <div>
                  <label for="passingMarks">Passing Marks</label> 
                <input type="number" id="passingMarks" name="passingMarks"  min="1" placeholder="Enter passing marks" required>


             </div>

              <button type="submit" class="btn btn-primary">Submit Exam</button>
            </form>
             <% if (typeof MSG !== 'undefined' && MSG) { %>
                               <div style="color: black;"><%= MSG %></div>
                                    <% } %>

          </div>
          

          <!-- View Course Table -->
          <div class="viewcourse ">


           
           <center> <h2 style=" color: #000;">üìã Existing Exams</h2></center>

            
           <% if (!data || data.length === 0) { %>
  <p class="text-center">No exams available</p>
<% } else { %>
  <table class="table table-bordered table-striped text-center w-75 mx-auto">
    <thead class="table-dark" id="courseTableBody">
      <tr>
        <th>#</th>
        <th>Exam Name</th>
        <th>Total Marks</th>
        <th>Passing Marks</th>
        <th>delete</th>
        <th>Update</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach((exam, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= exam.exname %></td>
          <td><%= exam.totalmark %></td>
          <td><%= exam.passingmark %></td>
          <td> <a href="/deleteById?Exam_id=<%= exam.ex_id %>" class="btn btn-danger btn-sm"
             onclick="return confirm('Are you sure you want to delete this course?');">
            <i class="fa-solid fa-trash"></i>
          </a></td>
          <td>
           <a href="/UpdatedById?Exam_id=<%= exam.ex_id %>" class="btn btn-warning btn-sm"
              onclick="return confirm('Are you sure you want to update this exam?');">
              <i class="fa-solid fa-pen-to-square"></i> Update
            </a>

          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
      <div class="pagination-controls text-center mt-3" id="paginationControls">

<% } %>


            
  
   
   

        

        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Scripts -->

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.min.js"></script>
</body>
</html>
