<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Registration</title>
  <style>
  .reg-wrapper {
    padding: 0px;
    margin-top: 10px;
  }

  .reg-card {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 15px 20px; /* reduced padding */
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
    max-width: 500px;
    margin: 0 auto 10px auto; /* smaller bottom space */
  }

  .reg-title {
    text-align: center;
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #000;
  }

  .reg-group {
    margin-bottom: 10px; /* reduced spacing */
  }

  .reg-group label {
    display: block;
    margin-bottom: 4px; /* tighter space */
    font-weight: 500;
    color: #333;
    font-size: 14px;
  }

  .reg-input,
  .reg-select {
    width: 100%;
    padding: 8px; /* slightly smaller */
    font-size: 13px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }

  .reg-button {
    width: 100%;
    padding: 9px;
    background-color: #4a90e2;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
  }

  .reg-button:hover {
    background-color: #3b7dc4;
  }
</style>

  
</head>
<body>

<div class="reg-wrapper">
  <div class="reg-card">
    <h2 class="reg-title">Student Registration</h2>

    <form method="POST" action="/register">
      <div class="reg-group">
        <label for="sname">Name</label>
        <input type="text" name="sname" id="sname" class="reg-input" required>
      </div>

      <div class="reg-group">
        <label for="semail">Email</label>
        <input type="email" name="semail" id="semail" class="reg-input" required>
      </div>

      <div class="reg-group">
        <label for="spassword">Password</label>
        <input type="password" name="spassword" id="spassword" class="reg-input" required>
      </div>

      <div class="reg-group">
        <label for="scontact">Contact</label>
        <input type="text" name="scontact" id="scontact" class="reg-input" required>
      </div>

      <div class="reg-group">
        <label for="schid">Exam Schedule</label>
        <select name="schid" id="schid" class="reg-select" required>
          <option value="">Select Exam Schedule</option>
          <% schedules.forEach(sch => { %>
           <option value="<%= sch.schid %>">
           <%= sch.cname.toUpperCase() %> - <%= sch.exname.toUpperCase() %>
      (Date: <%= sch.date ? sch.date.toISOString().slice(0,10) : "N/A" %> |
      Time: <%= sch.starttime ? sch.starttime.slice(0,5) : "N/A" %> -
      <%= sch.endtime ? sch.endtime.slice(0,5) : "N/A" %>)
           </option>
        <% }) %>
      </select>
      </div>

      <button type="submit" class="reg-button">Submit</button>
    </form>
  </div>
</div>

</body>
</html>
