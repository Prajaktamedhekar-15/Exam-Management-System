<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add New Course</title>
  <link rel="stylesheet" href="/style.css"/>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>
<body>
  <div class="D_container">
    <br><br><br>
    <div class="D_nav text-center">
      Welcome to Exam Application System
    </div>

    <div class="D_flex d-flex">
      <!-- Sidebar -->
      <div class="side1 p-3" style="width: 250px;">
        <center><h2>Admin</h2></center>
        <ul class="list-unstyled">
          <li><a href="/dashboard">Admin</a></li>
          <li><a href="/course">Subject</a></li>
          <li><a href="/exam">Exam</a></li>
          <li><a href="#">Question</a></li>
          <li><a href="#">Schedule</a></li>
          <li><a href="/dashBoard"> Dashboard </a></li> 
        </ul>
      </div>

      <!-- Main Content -->
      <div class="side2 flex-grow-1 p-4">
          <br><br>
        <div class="toshowCourse">
          <!-- Course Form -->
          
          <div class="course-form-container mb-4">
           
            <h2>Add New Course</h2>


            <form action="/addCourse" method="POST" class="form-inline">
              <div class="mb-3">
                <label for="cname" class="form-label">Course Name</label>
                <input type="text" class="form-control" id="cname" name="cname" placeholder="Enter course name" required>
              </div>
              <button type="submit" class="btn btn-primary">Add Course</button>
            </form>
          </div>

          <!-- View Course Table -->
          <div class="viewcourse">

           <center> <h1> Existing  courses</h1></center>
            
            <% if (typeof MSG !== 'undefined' && MSG) { %>
              <div class="alert alert-info"><%= MSG %></div>
            <% } %>

            <table class="table table-bordered table-striped text-center w-75 mx-auto">
              <thead>
                <% if (!data || data.length === 0) { %>
                  <tr><th colspan="3">There is no data present in the table</th></tr>
                <% } else { %>
                  <tr>
                    <th>#</th>
                    <th>Course Name</th>
                    <th>Action</th>
                  </tr>
                <% } %>
              </thead>
              <tbody>
  <% if (!data || data.length === 0) { %>
    <tr>
      <td colspan="3"><h5>There is no data present in the table</h5></td>
    </tr>
  <% } else { 
    data.forEach((element, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= element.cname %></td>
        <td>
          <a href="/deleteById?c_id=<%= element.cid %>" class="btn btn-danger btn-sm"
             onclick="return confirm('Are you sure you want to delete this course?');">
            <i class="fa-solid fa-trash"></i>
          </a>
        </td>
      </tr>
  <% }); } %>
</tbody>

    </table>
   
   

          </div>

        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.min.js"></script>
</body>
</html>
